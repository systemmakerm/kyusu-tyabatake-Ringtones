<div data-role="page" data-theme="b">

  <div data-role="header" data-position="inline">
    <h1>着信音機能</h1>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      <% @ringtones.each do |k, v| %>
        <li>
          <a href="<%= url_for(:action => :play_ringtone, :query => {:file => v, :name => k}) %>">
            <%= k %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>

</div>
